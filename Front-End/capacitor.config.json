{
  "appId": "com.gainslog.app",
  "appName": "GainsLog",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "allowNavigation": ["*"]
  },
  "plugins": {
    "StatusBar": {
      "style": "DARK",
      "backgroundColor": "#242424"
    },
    "SplashScreen": {
      "launchShowDuration": 2000, 
      "backgroundColor": "#242424",
      "androidSplashResourceName": "splash",
      "showSpinner": false
    },
    "CapacitorHttp": {
      "enabled": true
    }
  },
  "android": {
    "allowMixedContent": true,
    "handleDeepLinks": true
  }
}
